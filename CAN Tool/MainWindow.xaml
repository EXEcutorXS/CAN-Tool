<Window x:Class="CAN_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAN_Tool"
        mc:Ignorable="d"
        Title="Advers CAN Tool" Height="700" Width="1200" Loaded="Window_Loaded">
    <Grid>
        <TabControl Margin="0,50,0,0" Grid.ColumnSpan="2">
            <TabItem Header="CAN">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="CanIdField" Text="ID" Height="20" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 5 5 5"></TextBox>
                    <CheckBox x:Name="CanIdeField" Content="IDE" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100 7 5 5"></CheckBox>
                    <CheckBox x:Name="CanRtrField" Content="RTR" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150 7 5 5"></CheckBox>
                    <TextBox x:Name="CanDataField" Text="FFFFFFFFFFFFFFFF" Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210 5 5 5"></TextBox>
                    <DataGrid x:Name="CanMessageList" AutoGenerateColumns="False" Margin="5 40 5 5" FontFamily = "Courier New">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path = IdAsText}"  Header="ID" IsReadOnly="True">
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn Binding="{Binding Path = IDE}" Header="IDE"  IsReadOnly="True">
                            </DataGridCheckBoxColumn>
                            <DataGridCheckBoxColumn Binding= "{Binding Path = RTR}" Header="RTR"  IsReadOnly="True">
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Binding= "{Binding Path = DataAsText}" Header="DATA"  IsReadOnly="True">
                            </DataGridTextColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Advers">
                <TabControl Margin="3" Grid.ColumnSpan="2" >
                    <TabItem Header="Messages">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="71*"/>
                                <ColumnDefinition Width="520*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid x:Name="AC2PMessageList" AutoGenerateColumns="False"   Margin="5 50 400 5"  FontFamily = "Courier New" SelectionChanged="AC2PMessageList_SelectionChanged" AlternatingRowBackground="#FFA4EC84" SelectionMode="Single" Grid.ColumnSpan="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Path = PGN}"  Header="PGN" IsReadOnly="True">
                                    </DataGridTextColumn>
                                    <DataGridCheckBoxColumn Binding="{Binding Path = TransmitterType}" Header="FROM"  IsReadOnly="True">
                                    </DataGridCheckBoxColumn>
                                    <DataGridCheckBoxColumn Binding="{Binding Path = TransmitterAdress}" Header="ADR"  IsReadOnly="True">
                                    </DataGridCheckBoxColumn>
                                    <DataGridCheckBoxColumn Binding= "{Binding Path = ReceiverType}" Header="TO"  IsReadOnly="True">
                                    </DataGridCheckBoxColumn>
                                    <DataGridCheckBoxColumn Binding="{Binding Path = ReceiverAdress}" Header="ADR"  IsReadOnly="True">
                                    </DataGridCheckBoxColumn>
                                    <DataGridTextColumn Binding= "{Binding Path = DataAsText}" Header="DATA"  IsReadOnly="True">
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock x:Name="AC2PVerboseInfoField"  HorizontalAlignment="Left" Width="390" TextWrapping="Wrap" Grid.Column="1" Margin="650,0,0,0" ></TextBlock>
                        </Grid>

                    </TabItem>

                    <TabItem Header="Control">

                    </TabItem>
                    <TabItem Header="Config">
                        <Grid>
                            <ProgressBar x:Name="ConfigProgressBar"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="570 7,0,0" Height="20" Maximum="100" Minimum="0" Value="00" Width="210" />
                            <ComboBox x:Name="CurrentDeviceSelectorField" Width="400" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,7,0,0" Grid.ColumnSpan="2" SelectionChanged="CurrentDeviceSelectorField_SelectionChanged"></ComboBox>
                            <Button x:Name="readParametersButton"  Content="Read" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="338,7,0,0" Grid.Column="1" Click="readParametersButton_Click"></Button>
                            <Button x:Name="saveParametersButton" Content="Save" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,7,0,0" Grid.Column="1" Click="saveParametersButton_Click"></Button>
                            <Button x:Name="EraseParametersButton" Content="Erase" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="490,7,0,0" Grid.Column="1" Click="eraseParametersButton_Click"></Button>
                            <TextBox x:Name="ProgressText" Text="" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="800,7,0,0" Grid.Column="1"></TextBox>
                            
                            <DataGrid x:Name = "ConfigParameterField" Margin = "5 40 5 5" Grid.ColumnSpan="2" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Path = Id}"  Header="ID" IsReadOnly="True">
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding Path = idString}" Header="CODENAME"  IsReadOnly="True">
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding Path = Value}" Header="VAVUE">
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding= "{Binding Path = rusName}" Header="DESCRIPTION"  IsReadOnly="True">
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            

                        </Grid>
                    </TabItem>
                    <TabItem Header="Graph">
                        
                    </TabItem>
                    <TabItem Header="Black Box">
                    </TabItem>
                    <TabItem Header="Firmware">
                    </TabItem>
                </TabControl>


            </TabItem>
            <TabItem Header="RV-C">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        <Button  Content="Refresh" VerticalAlignment="Top" HorizontalAlignment="Left" Height="24" Width="70" Margin="15" Click="Button_Click"/>
        <ComboBox x:Name="PortNameList" VerticalAlignment="Top" HorizontalAlignment="Left" Height="24" Width="90" Margin="100 15 15 15" SelectionChanged="PortNameList_SelectionChanged"/>
        <Button x:Name="PortOpenButton" Content="Open" VerticalAlignment="Top" HorizontalAlignment="Left" Height="24" Width="90" Margin="200 15 15 15" Click="Button_Click_1"/>
        <ComboBox x:Name="CanBitrateField" VerticalAlignment="Top" HorizontalAlignment="Left" Height="24" Width="90" Margin="300 15 15 15"/>
        <Button Content="Normal" Height="24" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin ="400 15 15 15" Click="Button_Click_2"/>
        <Button Content="Listen" Height="24" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin ="500 15 15 15" Click="Button_Click_3"/>
        <Button Content="Close" Height="24" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin ="600 15 15 15" Click="Button_Click_4"/>


    </Grid>
</Window>
