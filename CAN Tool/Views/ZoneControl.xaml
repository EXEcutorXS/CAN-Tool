<UserControl x:Class="CAN_Tool.Views.ZoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAN_Tool.Views"
             mc:Ignorable="d" xmlns:vm="clr-namespace:CAN_Tool.ViewModels" d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ZoneHandler />
    </UserControl.DataContext>
    <Grid>
        <UniformGrid Rows="3" Columns="1">
            <StackPanel Orientation="Horizontal">
                <Button Content="{Binding State}" Margin="10"></Button>
                <ProgressBar Orientation="Vertical" Height="25" Margin="10" Maximum="100"  Value="{Binding CurrentPwm}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"></StackPanel>
            <StackPanel Orientation="Horizontal"></StackPanel>
        </UniformGrid>
    </Grid>
</UserControl>
